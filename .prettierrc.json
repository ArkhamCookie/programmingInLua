{
  "$schema": "https://json.schemastore.org/prettierrc.json",
  "trailingComma": "none",
  "tabWidth": 4,
  "semi": false,
  "useTabs": true,
  "singleQuote": true,
  "endOfLine": "lf",

  "overrides": [
    {
      "files": ["*.json", "*.yml", "*.yaml"],
      "options": {
        "tabWidth": 2
      }
    }
  ]
}
