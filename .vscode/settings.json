{
	"emeraldwalk.runonsave": {
		"commands": [
			{
				"match": "\\.*lua$",
				"cmd": "prettier ${file}"
			}
		]
	},
	"Lua.runtime.version": "LuaJIT",
	"Lua.runtime.special": {
		"love.filesystem.load": "loadfile"
	},
	"Lua.workspace.library": [
		"${3rd}/love2d/library"
	],
	"Lua.diagnostics.disable": [
		"duplicate-set-field"
	]
}
